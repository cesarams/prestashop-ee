<?xml version="1.0"?>
<ruleset name="PSR Coding Standards for Plugins">
    <description>Generally-applicable sniffs for PSR code style</description>

    <rule ref="PSR2">
        <exclude name="PSR1.Classes.ClassDeclaration.MissingNamespace"/>
        <exclude name="PSR1.Files.SideEffects"/>
        <exclude name="Squiz.Classes.ValidClassName.NotCamelCaps"/>
    </rule>

    <!-- Paths to check -->
    <file>.</file>
    <exclude-pattern>./.bin/*</exclude-pattern>
    <exclude-pattern>./vendor/*</exclude-pattern>
    <exclude-pattern>./Test/stubs/*</exclude-pattern>
    <exclude-pattern>./translations/*</exclude-pattern>
    <exclude-pattern>./tests/*</exclude-pattern>
</ruleset>